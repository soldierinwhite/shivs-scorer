<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.soldierinwhite.cricketscorer.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/newlands"
        android:scaleType="centerCrop"
        android:id="@+id/homeBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:fontFamily="sans-serif"
            android:contentDescription="@string/new_match"
            android:background="@color/colorPrimary"
            android:text="@string/new_match"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="newMatch"
            />
        <TextView
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:contentDescription="@string/matches"
            android:background="@color/colorPrimary"
            android:text="@string/matches"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="loadMatches"
            />
    </LinearLayout>
</RelativeLayout>
